    keymap {
        compatible = "zmk,keymap";

                base_layer {
// -------------------------------    -------------------------------
// |  Q  |  L  |  D  |  P  |  Z  |    |  B  |  V  |  U  |  Y  |  X  |
// |  A  |  R  |  S  |  T  |  G  |    |  M  |  N  |  E  |  I  |  O  |
// |  ~  |  W  |  C  |  K  |  <  |    |  >  |  H  |  F  |  J  | Ralt |
//           | _SYM(BSPC) | VOL- |    | VOL+ | _NAV(SPC) |
                        bindings = <
   &kp Q       &kp L        &kp D       &kp P        &kp Z           &kp B  &kp V        &kp U       &kp Y        &kp X
   &hml LALT A &hml LCTRL R &hml LGUI S &hsl LSHFT T &kp G           &kp M  &hsr LSHFT N &hmr LGUI E &hmr LCTRL I &hmr LALT O 
   &kp TILDE   &kp W        &kp C       &kp K        &kp LT          &kp GT &kp H        &kp F       &kp J        &kp RALT
                                     &bst _SYM BSPC  &kp C_VOL_DN    &kp C_VOL_UP  &spt _NAV SPACE
                        >;
                };

                nav_layer {
// --------------------------------    ----------------------------------
// | ESC |  7  |  8  |  9  | PSCR |    | APP | HOME |  UP  | END  | INS |
// |  0  |  4  |  5  |  6  | TAB  |    | DEL | LEFT | SPC  | RGHT | RET |
// | . , |  1  |  2  |  3  |      |    |     | PGUP | DOWN | PGDN | Ralt |
//                  | BSPC |      |    |     | SHFT |
                        bindings = <
   &kp ESC      &kp N7        &kp N8       &kp N9        &kp PSCRN       &kp K_APP &kp HOME        &kp UP          &kp END          &kp INS
   &hml LALT N0 &hml LCTRL N4 &hml LGUI N5 &hsl LSHFT N6 &kp TAB         &kp DEL   &hsr LSHFT LEFT &hmr LGUI SPACE &hmr LCTRL RIGHT &hmr LALT RET
   &kp KP_DOT   &kp N1        &kp N2       &kp N3        &none           &none     &kp PG_UP       &kp DOWN        &kp PG_DN        &kp RALT
                                           &bst _SYM BSPC &none           &none  &kp LSHFT
                        >;
                };
                
                sym_layer {
// -------------------------------    -------------------------------
// |  %  |  |  |  +  |  *  |  {  |    |  }  |  #  |  $  |  &  |  @  |
// |  !  |  ?  |  -  |  _  |  (  |    |  )  |  .  |  ,  |  "  |  '  |
// |  `  |  \  |  =  |  /  |  [  |    |  ]  |  :  |  ;  |  ^  | Ralt |
//                  | BSPC |     |    |     | SPC |
                        bindings = <
   &kp PRCNT      &kp PIPE         &kp PLUS        &kp STAR         &kp LBRC      &kp RBRC   &kp HASH       &kp DLLR        &kp AMPS       &kp AT
   &hml LALT EXCL &hml LCTRL QMARK &hml LGUI MINUS &hsl LSHFT UNDER &kp LPAR      &kp RPAR   &hsr LSHFT DOT &hmr LGUI COMMA &hmr LCTRL DQT &hmr LALT SQT
   &kp GRAVE      &kp BSLH         &kp EQUAL       &kp SLASH        &kp LBKT      &kp RBKT   &kp COLON      &kp SEMI        &kp CARET      &kp RALT
                                                          &kp BSPC  &none         &none   &spt _NAV SPACE
                        >;
                };
                
                btf_layer {
// --------------------------------    ----------------------------------
// | F1 |  F2   | F3  | F4  | F5  |    | BT1 | BT2  | BT3 |  BT4  | BT5 |
// | F6 |  F7   | F8  | F9  | F10 |    | BT- | SHFT | GUI | CTRL  | ALT |
// |    | RESET | F11 | F12 |     |    |     | USB  | RGB | RESET |     |
//                    |     |     |    |     |     |
                        bindings = <
   &kp F1 &kp F2     &kp F3  &kp F4  &kp F5        &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2    &bt BT_SEL 3 &bt BT_SEL 4
   &kp F6 &kp F7     &kp F8  &kp F9  &kp F10       &bt BT_CLR   &kp LSHFT    &kp LGUI        &kp LCTRL    &kp LALT
   &none  &sys_reset &kp F11 &kp F12 &none         &none        &out OUT_TOG &rgb_ug RGB_TOG &sys_reset   &none
                               &none &none         &none &none
                        >;
                };                
