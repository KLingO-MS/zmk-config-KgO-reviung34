#include "keypos_34keys.h"

#define _BASE    0
#define _SYM     1
#define _F_NAV   2
#define _BT_NP   3

#define RGB_BASE RGB_COLOR_HSB(230,20,3)
#define RGB_SYM RGB_COLOR_HSB(0,80,3)
#define RGB_F_NAV RGB_COLOR_HSB(100,80,3)
#define RGB_BT_NP RGB_COLOR_HSB(200,80,3)

&sk {
    quick-release;
};

&sl {
    release-after-ms = <300>;
};

/ {
    macros {
        to_BASE: to_BASE {
            label = "ZM_to_BASE";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings
                = <&rgb_ug RGB_BASE>
                , <&to _BASE>
                ;
        };

        mo_SYM: mo_SYM {
            label = "ZM_mo_SYM";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings
                = <&macro_tap &rgb_ug RGB_SYM>
                , <&macro_press &mo _SYM>
                , <&macro_pause_for_release>
                , <&macro_tap &rgb_ug RGB_BASE>
                , <&macro_release &mo _SYM>
                ;
        };

        to_F_NAV: to_F_NAV {
            label = "ZM_to_F_NAV";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings
                = <&rgb_ug RGB_F_NAV>
                , <&to _F_NAV>
                ;
        };

        mo_F_NAV: mo_F_NAV {
            label = "ZM_mo_F_NAV";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings
                = <&macro_tap &rgb_ug RGB_F_NAV>
                , <&macro_press &mo _F_NAV>
                , <&macro_pause_for_release>
                , <&macro_tap &rgb_ug RGB_BASE>
                , <&macro_release &mo _F_NAV>
                ;
        };

        to_BT_NP: to_BT_NP {
            label = "ZM_to_BT_NP";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings
                = <&rgb_ug RGB_BT_NP>
                , <&to _BT_NP>
                ;
        };

        mo_BT_NP: mo_BT_NP {
            label = "ZM_mo_BT_NP";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings
                = <&macro_tap &rgb_ug RGB_BT_NP>
                , <&macro_press &mo _BT_NP>
                , <&macro_pause_for_release>
                , <&macro_tap &rgb_ug RGB_BASE>
                , <&macro_release &mo _BT_NP>
                ;
        };

        to_BOOT: to_BOOT {
            label = "ZM_to_BOOT";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&rgb_ug RGB_COLOR_HSB(0,100,50)>
                , <&rgb_ug RGB_ON>
                , <&bootloader>
                ;
        };
    };

    combos {
        compatible = "zmk,combos";
        combo_RESET {
            timeout-ms = <50>;
            key-positions = <LTI LTC RTC RTI>;
            bindings = <&rch A A>;
        };

        combo_RGBEFF {
            timeout-ms = <50>;
            key-positions = <LMC RMC>;
            bindings = <&rgb_ug RGB_EFF>;
        };

        combo_ESC {
            timeout-ms = <50>;
            key-positions = <LTR LTM>;
            bindings = <&kp ESC>;
            layers = <_BASE _SYM>;
        };

        combo_TAB {
            timeout-ms = <50>;
            key-positions = <LMR LMM>;
            bindings = <&kp TAB>;
            layers = <_BASE _SYM>;
        };

        combo_DEL {
            timeout-ms = <50>;
            key-positions = <RTM RTR>;
            bindings = <&kp DEL>;
            layers = <_BASE _SYM>;
        };
            
        combo_RET {
            timeout-ms = <50>;
            key-positions = <RMM RMR>;
            bindings = <&kp RET>;
            layers = <_BASE _SYM>;
        };
            
        combo_lAltGr {
            timeout-ms = <50>;
            key-positions = <LBP LBR>;
            bindings = <&kp RALT>;
            layers = <_BASE _SYM>;
        };

        combo_rAltGr {
            timeout-ms = <50>;
            key-positions = <RBR RBP>;
            bindings = <&kp RALT>;
            layers = <_BASE _SYM>;
        };
          
        combo_LPAR {
            timeout-ms = <45>;
            key-positions = <LMM LMI>;
            bindings = <&kp LPAR>;
            layers = <_BASE _SYM>;
        };

        combo_RPAR {
            timeout-ms = <45>;
            key-positions = <RMI RMM>;
            bindings = <&kp RPAR>;
            layers = <_BASE _SYM>;
        };

        combo_LBRC {
            timeout-ms = <45>;
            key-positions = <LTM LTI>;
            bindings = <&kp LBRC>;
            layers = <_BASE _SYM>;
        };

        combo_RBRC {
            timeout-ms = <45>;
            key-positions = <RTI RTM>;
            bindings = <&kp RBRC>;
            layers = <_BASE _SYM>;
        };

        combo_LBKT {
            timeout-ms = <45>;
            key-positions = <LBM LBI>;
            bindings = <&kp LBKT>;
            layers = <_BASE _SYM>;
        };

        combo_RBKT {
            timeout-ms = <45>;
            key-positions = <RBI RBM>;
            bindings = <&kp RBKT>;
            layers = <_BASE _SYM>;
        };

//        combo_FSLH {
