//            layers = <_BASE _SYM>;
//        };

        combo_GT {
            timeout-ms = <45>;
            key-positions = <RBR RBM>;
            bindings = <&kp GT>;
            layers = <_BASE _SYM>;
        };

        combo_LT {
            timeout-ms = <45>;
            key-positions = <LBM LBR>;
            bindings = <&kp LT>;
            layers = <_BASE _SYM>;
        };
    };

    behaviors {
        tdl: tap_dance_left {
            compatible = "zmk,behavior-tap-dance";
            label = "LOCK_F_NAV";
            #binding-cells = <0>;
            tapping-term-ms = <250>;
            bindings = <&mo_F_NAV>, <&to_F_NAV>;
        };
 
        tdr: tap_dance_right {
            compatible = "zmk,behavior-tap-dance";
            label = "LOCK_BT_NP";
            #binding-cells = <0>;
            tapping-term-ms = <250>;
            bindings = <&mo_BT_NP>, <&to_BT_NP>;
        };

//        fnavtap: fnav-tap {
//            compatible = "zmk,behavior-hold-tap";
